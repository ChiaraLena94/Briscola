    <children>
        <ImageView fx:id="startImage" fitWidth="600.0" layoutX="140.0" layoutY="0.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/BASEeffettofinito.png" />
         </image></ImageView>
        <Button fx:id="loginButton" alignment="CENTER" layoutX="440.0" layoutY="450.0" mnemonicParsing="false" onAction="#login" prefHeight="72.0" prefWidth="142.0" text="Login" textAlignment="CENTER">
            <font>
                <Font name="Rockwell" size="24.0" />
            </font>
        </Button>
      <Label alignment="CENTER" layoutX="210.0" layoutY="269.0" text="Insert your username" textAlignment="CENTER" textFill="WHITE" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="220.0">
         <font>
            <Font name="Rockwell" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="username" alignment="CENTER" layoutX="256.0" layoutY="334.0" prefHeight="57.0" prefWidth="206.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" />
      <RadioButton fx:id="choice2" layoutX="205.0" layoutY="450.0" mnemonicParsing="false" onAction="#submitChoice" text="2" textFill="WHITE">
